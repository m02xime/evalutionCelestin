{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
    <div class="example-wrapper">
		<ul class="d-flex flex-row flex-wrap">
			{% for restaurant in restaurants %}
            {% if restaurant.proprietaire.name == proprietaire %}

				<div class="card" style="width: 18rem;">
					<div class="card-body">
						<h5 class="card-title">proprietaire:<br> {{restaurant.proprietaire.name}} {{restaurant.proprietaire.prenom}}</h5>
                        <p>restaurant: {{restaurant.name}}</p>
                        <p>date de naissance >: {{restaurant.proprietaire.dateNaissance|date("m/d/Y")}}</p>
					</div>
				</div>
                {% endif %}
			{% endfor %}

		</ul>


	</div>
{% endblock %}
