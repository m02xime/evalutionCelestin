{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">


		<h1>les restaurants</h1>
		<ul class="d-flex flex-row flex-wrap">
			{% for restaurant in restaurants %}
				<div class="card" style="width: 18rem;">
					<div class="card-body">
						<img class="card-img-top" src="{{restaurant.image}}" alt="{{ restaurant.name}}">
						<h5 class="card-title">resto :{{ restaurant.name}}</h5>
						<a class="card link-primary btn btn-primary" href="{{ path("Restaurant", {nom: restaurant.proprietaire.name}) }}">
							proprietaire : {{restaurant.proprietaire.name}}

						</a>
						<a class="card link-primary btn btn-primary" href="{{ path("ville", {nom: restaurant.Ville.name}) }}">
							ville :{{restaurant.Ville.name}}

						</a>
					</div>
				</div>
			{% endfor %}

		</ul>
	</div>


{% endblock %}
